<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Itamar Ribeiro - Site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+Ahom&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light MainToolBar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" id="linkTitle" asp-area="" asp-controller="Home" asp-action="About">Itamar Ribeiro :: Desenvolvedor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item pt-1">
                            <a class="nav-link text-dark" href="#" title="Português" onclick="setSiteLanguage('ptBR'); return false;">
                                <img src="~/images/Brazil_Flag.png" width="36" height="28" alt="PortuguÃªs" />
                                <span class="menuMobile"> Conteúdo em português</span>
                            </a>
                        </li>
                        <li class="nav-item pt-1">
                            <a class="nav-link text-dark" href="#" title="English" onclick="setSiteLanguage('enUS'); return false;">
                                <img src="~/images/USA_Flag.png" width="36" height="28" alt="English" />
                                <span class="menuMobile"> Content in English</span>
                            </a>
                        </li>
                        <li class="nav-item p-1">
                            <a class="nav-link text-dark" id="linkAbout" asp-area="" asp-controller="Home" asp-action="About">Sobre Mim</a>
                        </li>
                        <li class="nav-item p-1">
                            <a class="nav-link text-dark" id="linkArticles" asp-area="" asp-controller="Home" asp-action="Articles">Artigos</a>
                        </li>
                        <li class="nav-item p-1">
                            <a class="nav-link text-dark" id="linkContact" asp-area="" asp-controller="Home" asp-action="Contact">Contato</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/principal/principal.js" asp-append-version="true"></script>
    <script src="~/js/principal/articles.js" asp-append-version="true"></script>
    <script src="~/js/principal/contact.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
